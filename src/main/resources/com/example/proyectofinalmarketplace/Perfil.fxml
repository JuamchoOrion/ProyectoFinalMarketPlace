<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="backgroundColor" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectofinalmarketplace.PerfilController">
    <children>
        <!-- Sección para la cabecera y búsqueda -->
        <AnchorPane layoutY="55.0" prefHeight="346.0" prefWidth="204.0" styleClass="colorsolido" stylesheets="@Style.css">
            <children>
                <Label layoutX="24.0" layoutY="14.0" styleClass="titulo" text="ESTADISTICAS" />
                <Label layoutX="24.0" layoutY="64.0" styleClass="label-style" text="TOP 10 PRODUCTOS" />
                <Label layoutX="24.0" layoutY="207.0" styleClass="label-style" text="Contactos" />
            <Button layoutX="24.0" layoutY="282.0" mnemonicParsing="false" stylesheets="@Style.css" text="Agregar Producto" />
            <Button layoutX="24.0" layoutY="308.0" mnemonicParsing="false" stylesheets="@Style.css" text="Eliminar Producto" />
            </children>
        </AnchorPane>
        <AnchorPane layoutY="-1.0" prefHeight="56.0" prefWidth="600.0" styleClass="colorsolido">
            <children>
                <Button layoutX="112.0" layoutY="15.0" mnemonicParsing="false" stylesheets="@Style.css" text="Chat" />
                <TextField layoutX="344.0" layoutY="17.0" />
                <Label layoutX="241.0" layoutY="21.0" styleClass="label-style" text="Buscar Usuario" />
                <Button layoutX="34.0" layoutY="16.0" mnemonicParsing="false" stylesheets="@Style.css" text="Home" />
            <Button layoutX="507.0" layoutY="17.0" mnemonicParsing="false" stylesheets="@Style.css" text="Buscar" />
            </children>
        </AnchorPane>
        <Label layoutX="316.0" layoutY="63.0" styleClass="titulo" text="NOMBRE DE USUARIO" />

        <!-- HBox para mostrar los productos en fila -->
        <HBox layoutX="230.0" layoutY="100.0" spacing="20">
            <!-- Producto 1 -->
            <VBox alignment="CENTER">
                <ImageView fx:id="imageProduct1" fitHeight="100.0" fitWidth="100.0" />
                <Label fx:id="nameProduct1" text="Producto 1" />
                <Label fx:id="priceProduct1" text="Precio: €XX" />
            </VBox>
            <!-- Producto 2 -->
            <VBox alignment="CENTER">
                <ImageView fx:id="imageProduct2" fitHeight="100.0" fitWidth="100.0" />
                <Label fx:id="nameProduct2" text="Producto 2" />
                <Label fx:id="priceProduct2" text="Precio: €XX" />
            </VBox>
            <!-- Producto 3 -->
            <VBox alignment="CENTER">
                <ImageView fx:id="imageProduct3" fitHeight="100.0" fitWidth="100.0" />
                <Label fx:id="nameProduct3" text="Producto 3" />
                <Label fx:id="priceProduct3" text="Precio: €XX" />
            </VBox>
        </HBox>

        <!-- Caja de comentarios en la parte inferior -->
        <ScrollPane hbarPolicy="NEVER" layoutX="230.0" layoutY="250.0" prefHeight="120.0" prefWidth="300.0" styleClass="container" stylesheets="@Style.css" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="vboxComentarios" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
                    <!-- Comentario 1 (datos quemados) -->
                    <HBox spacing="10">
                        <Label style="-fx-font-weight: bold;" text="Usuario 1: " />
                        <Label text="Excelente vendedor, todo llegó a tiempo." />
                    </HBox>
                    <!-- Comentario 2 (datos quemados) -->
                    <HBox spacing="10">
                        <Label style="-fx-font-weight: bold;" text="Usuario 2: " />
                        <Label text="El producto no cumplió con mis expectativas." />
                    </HBox>
                    <!-- Comentario 3 (datos quemados) -->
                    <HBox spacing="10">
                        <Label style="-fx-font-weight: bold;" text="Usuario 3: " />
                        <Label text="Muy buen servicio, repetiría sin dudar." />
                    </HBox>
                    <!-- Comentario 4 (datos quemados) -->
                    <HBox spacing="10">
                        <Label style="-fx-font-weight: bold;" text="Usuario 4: " />
                        <Label text="Comunicación rápida y efectiva." />
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
